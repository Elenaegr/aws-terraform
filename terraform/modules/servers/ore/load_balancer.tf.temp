### Pool

resource "bigip_ltm_pool" "ore_pool_80" {
  name = "${format("/%s/%s-GBE-%s80", var.partition, ${upper(var.env)}, "${var.ore_color != "none" ? "${var.ore_color}-" : ""}" }"
  load_balancing_mode = "${var.lb_mode}"
  nodes = ["${bigip_ltm_node.node.name}:80"]
  monitors = ["${bigip_ltm_monitor.monitor.name}","${bigip_ltm_monitor.monitor2.name}"]
}

